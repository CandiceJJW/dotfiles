# ---- ZSH ----
alias config_zsh='nvim $XDG_CONFIG_HOME/zsh/.zshrc'                  # Configuration file

# ---- TMUX ----
alias config_tmux='nvim $XDG_CONFIG_HOME/tmux/tmux.conf'             # Configuration file
# alias tmux='env TERM=screen-256color tmux'        # Enable color and italic
# set t_ZH=[3m
# set t_ZR=[23m

# ---- NEOVIM ----
alias config_nvim='nvim $XDG_CONFIG_HOME/nvim/init.lua'  # Configuration file
alias nvimdiff='nvim -d'                          # nvimdiff

# ---- KITTY ----
alias config_kitty='nvim $XDG_CONFIG_HOME/kitty/kitty.conf'
export KITTY_CONFIG_DIRECTORY="$XDG_CONFIG_HOME/kitty/"

# ---- DOTFILES ----
export DOTFILES="$HOME/.dotfiles"

# git used to version control dot files
# alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/'

# ---- VAULT ----
export ZK_NOTEBOOK_DIR="$HOME/vault"              # Env for vault home
export ZK_EDITOR="nvim"                           # Default editor for zk
alias config_vault="nvim $ZK_NOTEBOOK_DIR/.zk/config.toml"

# ---- FZF ----
# .fzf.zsh or .fzf.bash should be source in .bashrc/.zshrc first
export FZF_DEFAULT_COMMAND="fd -t f"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd -t d"

# ---- GNUPG ----
export GNUPGHOME="$XDG_CONFIG_HOME/gnupg/"        # Conform to XDG direcotry specificaiton

# ---- LESS ----
export LESSHISTFILE="$XDG_CONFIG_HOME/less/history" # Conform to XDG direcotry specificaiton
export LESSKEY="$XDG_CONFIG_HOME/less/keys"         # Conform to XDG direcotry specificaiton

# ---- NUPACK ----
export NUPACKHOME='/Users/feiyouguo/Documents/Mine/UW/Current_Quarter/Ubicomp/Pakages/nupack3.2.2'

# ---- UTILITIES ----
alias rm='rm -i'                                  # Confirmation on remving

# ---- Import private shell settings if present----
[ -f $ZDOTDIR/.rc.private ] && source $ZDOTDIR/.rc.private

# ---- Import all MacOS Specific shell settings if on MacOS ----
[ $(check_OS) = "MacOS" ] && [ -f $ZDOTDIR/.rc.macos ] && source $ZDOTDIR/.rc.macos

# ---- Import all Linus Specific shell settings if on Lionux ----
[ $(check_OS) = "Linux" ] && [ -f $ZDOTDIR/.rc.linux ] && source $ZDOTDIR/.rc.linux

# ---- Import all Linus Specific shell settings if on Window 32 ----
[ $(check_OS) = "Win32" ] && [ -f $ZDOTDIR/.rc.win32 ] && source $ZDOTDIR/.rc.win32

# ---- Import all Linus Specific shell settings if on window 64 ----
[ $(check_OS) = "Win64" ] && [ -f $ZDOTDIR/.rc.win64 ] && source $ZDOTDIR/.rc.win64
